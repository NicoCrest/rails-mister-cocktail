
  <div class="container">
    <div class="text-center">
      <h1>Mister Cocktails</h1>
      <p>delicious cocktails all night long</p>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-4">
        <%= link_to cocktail_path(cocktail) do %>

          <div class="card"
          style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
           url('<%= cl_image_path cocktail.photo.path, crop: :fill %>')">
            <div class="card-descrition">
              <h2> <%= cocktail.name %> </h2>
            </div>
          </div>

        <% end %>
      </div>
    <% end %>
  </div>
</div>
<div class="container">
  <div class="row text-center">
      <%= link_to new_cocktail_path do %>
        <button class="btn-danger">Create a new Cocktail ! </button>
      <% end %>
  </div>
</div>
