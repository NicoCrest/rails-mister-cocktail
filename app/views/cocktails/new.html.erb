<div class="container">
<h1>Create a tasty Cocktails</h1>

<%= simple_form_for(@cocktail) do |f| %>
  <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :photo, as: :attachinary %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
</div>
